<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="360dp"
                android:layout_height="200dp">


    <ImageView
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/toast_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/self_check_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/self_check_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="温馨提醒"
            android:textColor="#246cca"
            android:textSize="36sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:text="缓存图片/录像大于1600张"
            android:textColor="#5b5c5d"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="请插入U盘导出后再继续操作"
            android:textColor="#5b5c5d"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/self_check_ok_btn"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_time_update"
                android:text="导出"
                android:textColor="@color/WHITE"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/self_check_cancel_btn"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_time_update"
                android:text="取消"
                android:textColor="@color/WHITE"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>