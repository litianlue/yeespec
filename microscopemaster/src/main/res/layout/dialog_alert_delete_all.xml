<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="180dp">

    <ImageView
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/toast_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/delete_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="全部删除"
            android:textColor="#5b5c5d"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/delete_lable_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="确定删除全部图片或视频?"
            android:textColor="#9b3b1e"
            android:textSize="28dp"/>

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/label_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="1"
                android:textColor="#246cca"
                android:textSize="28sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="/"
                android:textColor="#246cca"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/label_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="12"
                android:textColor="#246cca"
                android:textSize="28sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_delete_photo"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_time_update"
                    android:text="图片"
                    android:textColor="@color/WHITE"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/btn_delete_select"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_time_update"
                    android:text="确认"
                    android:textColor="@color/WHITE"
                    android:textSize="25sp"
                    android:visibility="gone"/>
            </RelativeLayout>


            <Button
                android:id="@+id/btn_delete_video"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_time_update"
                android:text="视频"
                android:textColor="@color/WHITE"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_time_update"
                android:text="取消"
                android:textColor="@color/WHITE"
                android:textSize="25sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>