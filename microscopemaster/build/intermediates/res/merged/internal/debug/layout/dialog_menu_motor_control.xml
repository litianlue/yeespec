<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:gravity="center"
            android:text="马达电机控制"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_margin="10.0dip"
            android:background="@drawable/view_divider"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_stop_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对焦电机 暂停 : "/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_progress_focus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center"
                    android:text="5 / 10"
                    />

                <SeekBar
                    android:id="@+id/seekbar_motor_focus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="5000"
                    android:progress="2500"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_margin="10.0dip"
            android:background="@drawable/view_divider"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_stop_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灯光电机 暂停 : "/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_progress_light"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center"
                    android:text="5 / 10"
                    />

                <SeekBar
                    android:id="@+id/seekbar_motor_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:progress="2"/>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_margin="10.0dip"
            android:background="@drawable/view_divider"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_stop_lens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物镜电机 暂停 : "/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_progress_lens"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center"
                    android:text="5 / 10"
                    />

                <SeekBar
                    android:id="@+id/seekbar_motor_lens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="5000"
                    android:progress="2500"/>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_margin="10.0dip"
            android:background="@drawable/view_divider"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 速度等级 : "
                android:textSize="28dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_progress_speed"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center"
                    android:text="5 / 10"
                    />

                <SeekBar
                    android:id="@+id/seekbar_motor_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="9"
                    android:progress="4"/>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_margin="10.0dip"
            android:background="@drawable/view_divider"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 转动步数 : "
                android:textSize="28dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_progress_step"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:gravity="center"
                    android:text="5 / 10"
                    />

                <SeekBar
                    android:id="@+id/seekbar_motor_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="3200"
                    android:progress="320"/>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_margin="10.0dip"
            android:background="@drawable/view_divider"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/toggle_direction"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_margin="5dp"
                android:layout_weight="1.0"
                android:textOff="反转"
                android:textOn="正转"
                android:textSize="13.0sp"/>

            <ToggleButton
                android:id="@+id/toggle_model"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_margin="5dp"
                android:layout_weight="1.0"
                android:textOff="一直转"
                android:textOn="按步转"
                android:textSize="13.0sp"/>

            <Button
                android:id="@+id/btn_send_debug"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_margin="5dp"
                android:layout_weight="2.0"
                android:text="发送调试"
                android:textSize="13.0sp"/>

        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_margin="10.0dip"
            android:background="@drawable/view_divider"/>

    </LinearLayout>
</ScrollView>